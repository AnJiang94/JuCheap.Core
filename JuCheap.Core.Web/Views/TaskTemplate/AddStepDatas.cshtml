@{
    ViewBag.Title = "添加任务模板表单";
    Layout = null;
}

@model IList<JuCheap.Core.Models.TaskTemplateStepDto>

@foreach(var form in Model)
{
    var index = Guid.NewGuid().ToString("N");

    <div id="step-@index" class="form-group">
        <input type="hidden" name="index" id="@index" value="@index"/>
        <input asp-for="@form.TemplateId" name="[@index].TemplateId" type="hidden"/>
        <label class="col-sm-2 control-label" asp-for="@form.StepName"></label>
        <div class="col-sm-4">
            <input asp-for="@form.StepName" name="[@index].StepName" class="form-control" placeholder="步骤名称"/>
            <span asp-validation-for="@form.StepName"></span>
            <span class="field-validation-valid" data-valmsg-for="[@index].StepName" data-valmsg-replace="true"></span>
        </div>
        <div class="col-sm-2 text-right">
            <button class="btn btn-info btn-xs" type="button" onclick="loadDatas('true')">
                <i class="fa fa-plus-circle"></i>
            </button>
            <button class="btn btn-danger btn-xs" type="button" onclick="deleteStep('@index')">
                <i class="fa fa-minus-circle"></i>
            </button>
        </div>
    </div>
}  



